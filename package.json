{
    "name": "htdocs-manager",
    "productName": "HTDocs Manager",
    "version": "2.0.0",
    "description": "Manage your local web server projects easily",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "dist": "electron-builder --win --x64"
    },
    "author": "RDEV",
    "license": "MIT",
    "devDependencies": {
        "electron": "^29.4.0",
        "electron-builder": "^24.13.3"
    },
    "dependencies": {
        "fs-extra": "^11.2.0",
        "@electron/remote": "^2.1.2"
    },
    "build": {
        "appId": "com.yourname.htdocsmanager",
        "productName": "HTDocs Manager",
        "directories": {
            "output": "dist"
        },
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64"
                    ]
                }
            ],
            "icon": "HTDocsManager.ico",
            "signingHashAlgorithms": [
                "sha256"
            ],
            "signDlls": false,
            "verifyUpdateCodeSignature": false
        },
        "nsis": {
            "oneClick": false,
            "allowElevation": true,
            "allowToChangeInstallationDirectory": true,
            "installerIcon": "HTDocsManager.ico",
            "uninstallerIcon": "HTDocsManager.ico",
            "installerHeaderIcon": "HTDocsManager.ico",
            "createDesktopShortcut": true,
            "createStartMenuShortcut": true,
            "shortcutName": "HTDocs Manager",
            "artifactName": "${productName}-Setup-${version}.${ext}"
        },
        "npmRebuild": false,
        "buildDependenciesFromSource": true
    }
}